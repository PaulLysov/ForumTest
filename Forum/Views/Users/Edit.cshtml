@{
	ViewBag.Title = "title";
	Layout = "../Shared/_Layout.cshtml";
}

<h2>User info</h2>

<div class="row" ng-controller="UsersController">
	<form class="form" ng-con ng-submit="editUserInfo()">

		<label class="col-md-2" for="email">Your Email:</label>
		<input type="text" ng-model="userForm.email" id="email" disabled="disabled" required/>
		<label class="col-md-2" for="login">Login:</label>
		<input type="text" ng-model="userForm.login" id="login" required/>

		<label class="col-md-2" for="firstName">FirstName:</label>
		<input type="text" ng-model="userForm.firstName" id="firstName"/>
		<label class="col-md-2" for="lastName">LastName:</label>
		<input type="text" ng-model="userForm.lastName" id="lastName" />

		<button type="submit">Save</button>
		
		<div class="row error" ng-if="userForm.errMsg!=''">
			{{userForm.errMsg}}
		</div>
	</form>
</div>