@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<div class="row" ng-controller="LoginController">
	<form class="account-form" ng-submit="login()">
		<div class="row">
			<label class="col-md-2" for="emailAddress">Email Address:</label>
			<input type="text" ng-model="loginForm.email" id="emailAddress" required/>
		</div>

		<div class="row">
			<label class="col-md-2" for="password">Password:</label>
			<input type="password" id="password" ng-model="loginForm.password" required />
		</div>
	
		<button type="submit">Login</button>
	</form>
</div>
