@{
	Layout = "../Shared/_Layout.cshtml";
}

<div class="row" ng-controller="AddTopicController">
	<form class="form" ng-submit="addTopic()">
		<div class="col-md-6">
			<label class="col-md-2" for="email">Email Address:</label>
			<input type="text" ng-model="loginForm.email" id="name" required />
		</div>

		<div class="row">
			<label class="col-md-2" for="password">Password:</label>
			<input type="password" id="password" ng-model="loginForm.password" required />
		</div>

		


		<button type="submit">Login</button>

		<div class="error" ng-if="loginForm.loginFailure">
			Login failure
		</div>
	</form>
	<form>
		<div class="col-md-6">
			<label for="topicName">Topic name: </label>
			<input id="topicName" mg-model="topicForm"/>
		</div>
		
	</form>

</div>

