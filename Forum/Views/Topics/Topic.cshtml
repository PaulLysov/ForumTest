@{
	Layout = "../Shared/_Layout.cshtml";
}

<div class="row" ng-controller="AddTopicController">
	<form class="form" ng-submit="addTopic()">
		<div class="col-md-6">
			<label class="col-md-2" for="name">Topic Name:</label>
			<input type="text" ng-model="topicForm.email" id="name" required/>
		</div>

		<div class="col-md-6">
			<label class="col-md-2" for="type">Topic Type:</label>
			<input type="text" ng-model="topicForm.type" id="type" required/>
		</div>

		<button type="submit">Create</button>

		<div class="error" ng-if="topicForm.isFailure">
			Topic create failure
		</div>
	</form>
</div>

